@page
@model LoginModel

@{
    ViewData["Title"] = "Logga in";
}


<h2 class="margin-bottom-20">@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <div class="form-group">
                    <label>E-post</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Lösenord</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox form-group">
                    <label asp-for="Input.RememberMe" class="form-control">
                        <input asp-for="Input.RememberMe" />
                        Behåll mig inloggad!
                    </label>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary form-control btn-form">Logga in</button>
                </div>
                <div class="form-group">
                    <div class="form-control">
                        <p class="margin-top-10">
                            <a id="forgot-password" asp-page="./ForgotPassword">Glömt ditt lösenord?</a>
                        </p>
                        <p class="margin-top-10 margin-bottom-20 ">
                            Inte registrerad ännu?
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrera ny användare</a>
                        </p>
                        @*<p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Skicka e-post konfirmation</a>
                        </p>*@
                    </div>
                    
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
