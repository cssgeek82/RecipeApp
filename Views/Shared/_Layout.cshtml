<!DOCTYPE html>
<html lang="sv-se">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Recipe for health : @ViewData["Title"]</title>
    <!--<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> -->
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/layout.css" />

</head>
<body>
    <div class="container @ViewBag.ContainerClass">
        <!-- Check if user is logged in to display different header-->
        @if (User.Identity.IsAuthenticated)
        {
            <partial name="_AdminHeader" />
        }
        else
        {
            <partial name="_header" />
        }
        <main class="main">
            @RenderBody()
        </main>
        <!-- Only display footer if user isn´t logged in -->
        @if (!User.Identity.IsAuthenticated)
        {
            <partial name="_footer" />
        }

    </div>

    <script src="~/js/main.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
